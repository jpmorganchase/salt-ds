{
  "source": ["tokens/**/*.json", "tokens/**/*.js"],
  "platforms": {
    "rn": {
      "transformGroup": "react-native",
      "buildPath": "build/react-native/",
      "prefix": "uitk",
      "files": [
        {
          "destination": "variables.js",
          "format": "javascript/es6"
        }
      ]
    },
    "css": {
      "transformGroup": "uitk/css",
      "buildPath": "build/css/",
      "prefix": "uitk",
      "files": [
        {
          "format": "uitk/css/themes/all",
          "destination": "colors.css",
          "filter": "uitk/filter/colors/all"
        },
        {
          "format": "uitk/css/themes/light",
          "destination": "colors-light.css",
          "options": {
            "outputReferences": true
          },
          "filter": "uitk/filter/colors/light"
        },
        {
          "format": "uitk/css/density/all",
          "destination": "sizes_all.css",
          "options": {
            "outputReferences": true
          },
          "filter": "uitk/filter/sizes/density/all"
        },
        {
          "format": "uitk/css/density/medium",
          "destination": "sizes_medium.css",
          "options": {
            "outputReferences": true
          },
          "filter": "uitk/filter/sizes/density/medium"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "prefix": "uitk",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "android": {
      "transformGroup": "android",
      "buildPath": "build/android/",
      "prefix": "uitk",
      "files": [
        {
          "destination": "font_dimens.xml",
          "format": "android/fontDimens"
        },
        {
          "destination": "colors.xml",
          "format": "android/colors"
        }
      ]
    },
    "ios-swift": {
      "transformGroup": "ios-swift",
      "buildPath": "build/ios-swift/",
      "prefix": "uitk",
      "files": [
        {
          "destination": "StyleDictionary+Class.swift",
          "format": "ios-swift/class.swift",
          "className": "StyleDictionaryClass",
          "filter": {}
        },
        {
          "destination": "StyleDictionary+Enum.swift",
          "format": "ios-swift/enum.swift",
          "className": "StyleDictionaryEnum",
          "filter": {}
        },
        {
          "destination": "StyleDictionary+Struct.swift",
          "format": "ios-swift/any.swift",
          "className": "StyleDictionaryStruct",
          "filter": {},
          "options": {
            "imports": "SwiftUI",
            "objectType": "struct",
            "accessControl": "internal"
          }
        }
      ]
    },
    "ios-swift-separate-enums": {
      "transformGroup": "ios-swift-separate",
      "buildPath": "build/ios-swift/",
      "prefix": "uitk",
      "files": [
        {
          "destination": "StyleDictionaryColor.swift",
          "format": "ios-swift/enum.swift",
          "className": "StyleDictionaryColor",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "destination": "StyleDictionarySize.swift",
          "format": "ios-swift/enum.swift",
          "className": "StyleDictionarySize",
          "filter": {
            "attributes": {
              "category": "size"
            }
          }
        }
      ]
    }
  }
}
