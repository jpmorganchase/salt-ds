{
  "plugins": [
    "./tooling/stylelint/correct-theme-token-usage/index.mjs",
    "./tooling/stylelint/no-deprecated-token-usage/index.mjs",
    "./tooling/stylelint/custom-property-attributes-kebab-case/index.mjs",
    "./tooling/stylelint/custom-property-starts-with-component-name/index.mjs",
    "./tooling/stylelint/characteristic-token-in-all-themes/index.mjs"
  ],
  "rules": {
    "salt/correct-theme-token-usage": {
      "logLevel": "default"
    },
    "salt/no-deprecated-token-usage": {
      "logLevel": "default"
    },
    "salt/custom-property-attributes-kebab-case": {
      "logLevel": "default"
    },
    "salt/custom-property-starts-with-component-name": {
      "logLevel": "default"
    },
    "salt/characteristic-token-in-all-themes": null
  },
  "overrides": [
    {
      "files": ["**/ag-grid-theme/**/*.css"],
      "rules": {
        "salt/custom-property-attributes-kebab-case": null,
        "salt/custom-property-starts-with-component-name": null,
        "salt/no-deprecated-token-usage": [
          false,
          {
            "severity": "warning"
          }
        ]
      }
    },
    {
      "files": ["**/theme/css/**/*.css"],
      "rules": {
        "salt/correct-theme-token-usage": null,
        "salt/custom-property-attributes-kebab-case": null,
        "salt/custom-property-starts-with-component-name": null
      }
    },
    {
      "files": ["**/theme/css/*/characteristics/*.css"],
      "rules": {
        "salt/characteristic-token-in-all-themes": true
      }
    },
    {
      "files": ["**/theme/css/deprecated/**/*.css"],
      "rules": {
        "salt/no-deprecated-token-usage": null
      }
    },
    {
      "files": ["**/lab/**/*.css"],
      "rules": {
        "salt/no-deprecated-token-usage": [
          false,
          {
            "severity": "warning"
          }
        ]
      }
    }
  ]
}
