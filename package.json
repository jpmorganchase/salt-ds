{
  "name": "@jpmorganchase/root",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "packages/**",
    "tooling/**",
    "playground/**",
    "docs"
  ],
  "modular": {
    "type": "root"
  },
  "scripts": {
    "start": "yarn storybook",
    "build": "yarn build:core && yarn build:lab && yarn build:icons && yarn build:theme && yarn build:grid && yarn build:ag-grid-theme",
    "build:core": "modular build @jpmorganchase/uitk-core",
    "build:icons": "modular build @jpmorganchase/uitk-icons",
    "build:lab": "modular build @jpmorganchase/uitk-lab",
    "build:theme": "yarn workspace @jpmorganchase/uitk-theme build",
    "build:grid": "modular build @jpmorganchase/uitk-grid",
    "build:ag-grid-theme": "yarn workspace @jpmorganchase/uitk-ag-grid-theme build",
    "test": "modular test",
    "test:components": "cypress run --component --browser chrome --headless",
    "test:components:local": "cypress open --component --browser electron",
    "lint": "modular lint",
    "lint:core": "yarn eslint \"packages/core/src/**/*.{ts,tsx}\" --ignore-pattern \"**/__tests__/**\"",
    "prettier": "prettier --write . --ignore-path .gitignore",
    "prettier:ci": "prettier --check . --ignore-path .gitignore",
    "lint:style": "yarn lint:style:core && yarn lint:style:icon && yarn lint:style:lab",
    "lint:style:core": "yarn stylelint -f verbose \"packages/core/src/**/*.css\"",
    "lint:style:icon": "yarn stylelint -f verbose \"packages/icons/src/**/*.css\"",
    "lint:style:lab": "yarn stylelint -f verbose \"packages/lab/src/**/*.css\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "yarn build:ag-grid-theme && build-storybook",
    "typecheck": "yarn typecheck:modular && yarn typecheck:toolkit:test && yarn typecheck:toolkit:e2e",
    "typecheck:modular": "modular typecheck",
    "typecheck:toolkit:test": "tsc --noEmit --project packages/core/src/__tests__/tsconfig.json",
    "typecheck:toolkit:e2e": "tsc --noEmit --project packages/core/src/__tests__/__e2e__/tsconfig.json",
    "chromatic": "chromatic"
  },
  "dependencies": {
    "@changesets/cli": "^2.24.2",
    "@cypress/code-coverage": "^3.10.0",
    "@floating-ui/react-dom-interactions": "^0.5.0",
    "@internationalized/date": "^3.0.0",
    "@storybook/addon-a11y": "^6.5.12",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-docs": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/addon-storysource": "^6.5.12",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/node-logger": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@storybook/testing-react": "^1.3.0",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.5.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.20",
    "@types/no-scroll": "^2.1.0",
    "@types/node": "^14.14.20",
    "@types/react": "^18.0.0",
    "@types/react-color": "^3.0.6",
    "@types/react-dom": "^18.0.0",
    "@types/react-window": "^1.8.2",
    "@types/tinycolor2": "^1.4.3",
    "@types/warning": "^3.0.0",
    "@vitejs/plugin-react": "^2.1.0",
    "ag-grid-community": "^27.3.0",
    "ag-grid-enterprise": "^27.3.0",
    "ag-grid-react": "^27.3.0",
    "aria-hidden": "^1.1.1",
    "attr-accept": "^2.0.0",
    "axe-core": "^4.4.3",
    "chokidar": "^3.5.3",
    "chromatic": "next",
    "ci-info": "^3.3.1",
    "classnames": "^2.2.6",
    "clipboard-copy": "^4.0.1",
    "compute-scroll-into-view": "^1.0.16",
    "csstree-validator": "^3.0.0",
    "cypress": "^10.10.0",
    "cypress-axe": "^1.0.0",
    "cypress-real-events": "^1.7.2",
    "deepmerge": "^4.2.2",
    "del": "^6.0.0",
    "dom-accessibility-api": "^0.5.10",
    "eslint": "^7.32.0",
    "eslint-config-modular-app": "3.0.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-storybook": "^0.6.0",
    "glob": "^8.0.0",
    "modular-scripts": "patch:modular-scripts@npm:3.4.0#.yarn/patches/modular-scripts-npm-3.4.0-8cdb747f13.patch",
    "no-scroll": "^2.1.1",
    "nyse-holidays": "^1.2.0",
    "prettier": "^2.6.2",
    "react": "^18.0.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.2.1",
    "react-window": "^1.8.6",
    "rifm": "^0.12.0",
    "sass": "^1.52.3",
    "tinycolor2": "^1.4.2",
    "ts-node": "^10.4.0",
    "typescript": "4.6.4",
    "vite": "^3.1.0",
    "vite-plugin-istanbul": "^3.0.1",
    "vite-tsconfig-paths": "^3.5.0",
    "warning": "^4.0.3",
    "webpack": "5.74.0"
  },
  "resolutions": {
    "esbuild": "0.14.51"
  },
  "browserslist": {
    "production": [
      "chrome 79",
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "chrome 79",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/csstree-validator"
    ]
  },
  "packageManager": "yarn@3.2.4",
  "devDependencies": {
    "stylelint": "^14.9.1"
  }
}
