{
  "name": "@jpmorganchase/root",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "packages/**",
    "tooling/**",
    "playground/**",
    "docs"
  ],
  "modular": {
    "type": "root"
  },
  "scripts": {
    "start": "yarn storybook",
    "build": "yarn build:core && yarn build:lab && yarn build:icons && yarn build:theme",
    "build:core": "modular build @jpmorganchase/uitk-core",
    "build:icons": "modular build @jpmorganchase/uitk-icons",
    "build:lab": "modular build @jpmorganchase/uitk-lab",
    "build:theme": "cd packages/theme && yarn build",
    "test": "modular test",
    "test:components": "cypress run --component --browser chrome --headless",
    "test:components:local": "cypress open --component --browser chrome",
    "lint": "modular lint",
    "prettier": "prettier --write . --ignore-path .gitignore",
    "prettier:ci": "prettier --check . --ignore-path .gitignore",
    "lint:style": "yarn stylelint -f verbose \"packages/core/src/**/*.css\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "typecheck": "yarn typecheck:modular && yarn typecheck:toolkit:test && yarn typecheck:toolkit:e2e",
    "typecheck:modular": "modular typecheck",
    "typecheck:toolkit:test": "tsc --noEmit --project packages/core/src/__tests__/tsconfig.json",
    "typecheck:toolkit:e2e": "tsc --noEmit --project packages/core/src/__tests__/__e2e__/tsconfig.json",
    "chromatic": "chromatic"
  },
  "dependencies": {
    "@changesets/cli": "^2.19.0",
    "@cypress/code-coverage": "^3.10.0",
    "@floating-ui/react-dom-interactions": "^0.5.0",
    "@storybook/addon-a11y": "^6.4.18",
    "@storybook/addon-actions": "^6.4.18",
    "@storybook/addon-docs": "^6.4.18",
    "@storybook/addon-essentials": "^6.4.18",
    "@storybook/addon-links": "^6.4.18",
    "@storybook/builder-vite": "^0.1.24",
    "@storybook/node-logger": "^6.4.18",
    "@storybook/react": "^6.4.18",
    "@storybook/testing-react": "^1.2.2",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/dom": "^8.5.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/classnames": "^2.2.11",
    "@types/cypress-image-snapshot": "^3.1.6",
    "@types/jest": "^26.0.20",
    "@types/no-scroll": "^2.1.0",
    "@types/node": "^14.14.20",
    "@types/react": "^17.0.0",
    "@types/react-color": "^3.0.6",
    "@types/react-dom": "^17.0.0",
    "@types/react-window": "^1.8.2",
    "@types/tinycolor2": "^1.4.3",
    "@types/warning": "^3.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "ag-grid-community": "^25.0.0",
    "ag-grid-enterprise": "^25.0.0",
    "ag-grid-react": "^25.0.0",
    "aria-hidden": "^1.1.1",
    "attr-accept": "^2.0.0",
    "axe-core": "^4.3.5",
    "chromatic": "next",
    "ci-info": "^3.3.1",
    "classnames": "^2.2.6",
    "clipboard-copy": "^4.0.1",
    "compute-scroll-into-view": "^1.0.16",
    "css-validator": "^0.10.0",
    "csstree-validator": "^3.0.0",
    "cypress": "^10.0.3",
    "cypress-axe": "^0.14.0",
    "cypress-image-snapshot": "^4.0.1",
    "cypress-real-events": "^1.6.0",
    "dayjs": "1.10.6",
    "deepmerge": "^4.2.2",
    "del": "^6.0.0",
    "dom-accessibility-api": "^0.5.10",
    "eslint-config-modular-app": "3.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-storybook": "^0.5.5",
    "glob": "^7.1.6",
    "modular-scripts": "patch:modular-scripts@npm:3.1.2#.yarn/patches/modular-scripts-npm-3.1.0-5a349ac39e.patch",
    "no-scroll": "^2.1.1",
    "prettier": "^2.6.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.1",
    "react-fast-compare": "^3.2.0",
    "react-router-dom": "^6.2.1",
    "react-window": "^1.8.6",
    "rifm": "^0.12.0",
    "svgo": "^2.3.0",
    "tinycolor2": "^1.4.2",
    "ts-node": "^10.4.0",
    "typescript": "4.6.4",
    "vite": "^2.9.0",
    "vite-plugin-istanbul": "^2.7.3",
    "vite-plugin-optimize-persist": "^0.1.2",
    "vite-plugin-package-config": "^0.1.1",
    "vite-tsconfig-paths": "^3.4.1",
    "warning": "^4.0.3",
    "webpack": "5.73.0"
  },
  "resolutions": {
    "esbuild": "0.14.42"
  },
  "browserslist": {
    "production": [
      "chrome 79",
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "chrome 79",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/csstree-validator"
    ]
  },
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "stylelint": "^14.9.1"
  }
}
